{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "compileOnSave": true,
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
